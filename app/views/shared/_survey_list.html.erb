<%= render layout: 'layouts/sidebar' do  %>
    <div class="list-group top-margin-buffer">
      <% @surveys.each do |survey| %>
        <%= link_to survey.name, new_survey_attempt_path(survey), class: "list-group-item #{'active' if selected_survey && selected_survey == survey}" %>
      <% end %>
    </div>
<% end %>